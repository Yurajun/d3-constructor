.d3
	display block

#container
	position fixed
	top 0
	right 0
	left 0
	bottom 0

.kit-editor
	position relative
	width 100%
	height 100%

	&__button
		position absolute
		top 1em
		right 1em
		width 2em
		height 2em
		text-align center
		color #fff
		background-color gray
		border none
		border-right 3px
		border-radius 50%

#svg-editor
	width 100%
	height 100%

svg .underlay
	pointer-events all
	fill none

g.axis
	pointer-events none

	line
		fill none
		stroke #ddd
		shape-rendering cripsEdges
		vector-effect non-scaling-stroke


.svg-border
	// pointer-event none
	stroke #a9b0b8
	stroke-width 1.5
	fill none

.to-center-btn
	position absolute
	top 0
	left 0
	padding 15px 0
	width 30px
	line-height 0
	text-align center
	border 1px solid #000
	border-right 3px

button
	backface-visibility hidden
	transform translateZ(0)
	will-change transform

[data-kit-gear]

	.gear
		fill-opacity .85
		stroke gray
		stroke-opacity .25

	.gear-outer-circle
		fill #f50500
		stroke gray

	.gear-inner-circle
		fill #dd0903

[data-kit-triangle]
	stroke #000
	fill #f50500
